<p>
	<strong>Title:</strong>
	<%= @event.title %>
</p>

<p>
	<strong>Description:</strong>
	<%= @event.description %>
</p>

<p>
	<strong>City:</strong>
	<%= @event.city %>
</p>

<p>
	<strong>State:</strong>
	<%= @event.state %>
</p>

<p>
	<strong>Address:</strong>
	<%= @event.address %>
</p>

<p>
	<strong>Picture:</strong>
	<%= image_tag @event.picture.url(:thumb) %>
</p>

<p>
	
<% @event.teams.each do |team| %>
Team: <%= team.name %>
<br/>
Positions: <% team.positions.each do |position| %>
<%= position.name %>
<% end %>
<br/>
<% end %>
</p>
