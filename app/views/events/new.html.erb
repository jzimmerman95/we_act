<h1>Create Event</h1>

<% if @event.errors.any? %>
	<div class = "errors">
		Your event could not be created.
	<ul>
		<% @event.errors.full_messages.each do |message| %>
			<li><%=message%></li>
		<% end %>
	</ul>

<% end %>

<%= form_for(@event, :url => events_path) do |f| %>

  <%= f.label :title %>:
  <%= f.text_field :title %>

  <br/><br/>

  <%= f.label :description %>:
  <%= f.text_field :description %>

  <br/><br/>

  <%= f.label :city %>:
  <%= f.text_field :city %>

  <br/><br/>

  <%= f.label :state %>:
  <%= f.text_field :state %>

  <br/><br/>

  <%= f.label :address %>:
  <%= f.text_field :address %>

  <br/><br/>

  <%= f.label :event_time %>:
  <%= f.text_field :event_time %>

  <br/><br/>

  <%= f.submit "Create Event" %>

<% end %>